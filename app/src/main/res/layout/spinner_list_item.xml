<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/info_cirle" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tv_tinted_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:gravity="start"
        android:paddingBottom="@dimen/one_and_a_half_grid_unit"
        android:paddingEnd="@dimen/one_and_a_half_grid_unit"
        android:paddingLeft="@dimen/one_and_a_half_grid_unit"
        android:paddingStart="@dimen/one_and_a_half_grid_unit"
        android:paddingTop="@dimen/one_and_a_half_grid_unit"
        android:singleLine="true"
        android:textSize="15sp"
        tools:text="Item"
        tools:textColor="@android:color/black" />

</LinearLayout>