<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
            android:id="@+id/search_cust_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="18sp"
            custom:font="roboto_black_italic" />

        <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
            android:id="@+id/search_cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            custom:font="roboto_regular" />

        <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
            android:id="@+id/search_cust_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            custom:font="roboto_regular" />
    </LinearLayout>
</LinearLayout>
