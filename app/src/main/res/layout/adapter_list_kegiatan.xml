<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_keg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
                android:id="@+id/lkWaktu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Date and Time"
                custom:font="trebuchet_italic" />

            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
                android:id="@+id/lkCCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Code"
                android:textAlignment="gravity"
                custom:font="trebuchet_bold" />

            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
                android:id="@+id/lkID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="end"
                android:text="ID = 40"
                custom:font="trebuchet_bold_italic" />
        </LinearLayout>

        <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
            android:id="@+id/lkNoOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Order"
            android:textSize="18sp"
            android:visibility="gone"
            custom:font="roboto_slab_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
                android:id="@+id/lkCName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Customer Name"
                android:textSize="18sp"
                custom:font="trebuchet_regular" />

            <RelativeLayout
                android:id="@+id/layout_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_cancel"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_cos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_cos"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/icon_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_checkin"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>