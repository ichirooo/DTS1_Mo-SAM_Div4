            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoTextView
                android:id="@+id/inp_time_end"
                style="?android:attr/spinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:onClick="showTimePickerDialog" />
        </LinearLayout>

        <co.id.datascrip.mo_sam_div4_dts1.font.RobotoEditText
            android:id="@+id/txtSubject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:singleLine="true" />

        <fragment
            android:id="@+id/googlemap"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="5dp"
            android:layout_weight="1" />

        <co.id.datascrip.mo_sam_div4_dts1.font.RobotoButton
            android:id="@+id/btSimpanKeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Kegiatan" />
    </LinearLayout>
</LinearLayout>