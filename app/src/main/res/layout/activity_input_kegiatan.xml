<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Input_Kegiatan_Activity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoEditText
                android:id="@+id/txtCustName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Customer Name"
                android:maxLines="2"
                android:singleLine="true"
                android:visibility="gone" />

            <AutoCompleteTextView
                android:id="@+id/txtCustNameAutoComplete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:completionThreshold="1"
                android:hint="Customer Name"
                android:maxLines="2"
                android:singleLine="true" />

            <co.id.datascrip.mo_sam_div4_dts1.font.RobotoButton
                android:id="@+id/btfind"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:text="Find" />

        </LinearLayout>

        <co.id.datascrip.mo_sam_div4_dts1.custom.spinner.NiceSpinner
            android:id="@+id/txtTipeKeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            app:textTint="@color/black" />

        <co.id.datascrip.mo_sam_div4_dts1.custom.spinner.NiceSpinner
            android:id="@+id/txtJenisKeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="2dp"
            app:textTint="@color/black" />
