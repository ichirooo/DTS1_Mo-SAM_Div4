<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/button_selector_border" />
            <solid android:color="@color/button_selector_pressed" />
            <corners android:radius="@dimen/dimen_5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/button_selector_border" />
            <solid android:color="@color/button_selector_pressed" />
            <corners android:radius="@dimen/dimen_5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/button_selector_border" />
            <solid android:color="@color/button_selector_default" />
            <corners android:radius="@dimen/dimen_5dp" />
        </shape>
    </item>
</selector>